#Wrapper {
  background: url(<%= asset_path('admin/bg.png') %>) repeat;
}

#Top {
  background: #303033;
}

table.admin {
  td { text-align: center; }
}

#AdminMenu{
  float: left;
  width: 125px;
}

#AdminContent {
  margin: 0px 0px 0px 145px;
  .column .box {
    width: 95%;
  }
}

.current_item {
  font-weight: bold;
  color: black !important;
  font-size: 14px;
}

.published {
  color: green;
  font-weight: bold;
}

.draft {
  color: #999;
  font-style: italic;
}

.mll { height: 40em; }

textarea.ml, textarea.sl { width: 580px; }
